<UserControl x:Class="Chem4Word.UI.TwoD.BondContextMenu" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib" Height="107" Width="301" ClipToBounds="False">
	<Grid>
		<ToolBarTray HorizontalAlignment="Left" Width="300">
			<ToolBar Name="toolBar1" Band="1" BandIndex="1" Width="300">
				<ComboBox x:Name="bondOrderComboBox" Width="130" SelectedItem="Select bond order" SelectionChanged="bondOrderComboBox_SelectionChanged">
					<System:String>Select bond order</System:String>
				</ComboBox>
				<ComboBox x:Name="bondStereoComboBox" Width="130" SelectedItem="Select bond stereo" SelectionChanged="bondStereoComboBox_SelectionChanged">
					<System:String>Select bond stereo</System:String>
				</ComboBox>
			</ToolBar>
			<ToolBar Name="toolBar2" Band="2" BandIndex="1" Width="300">
				<ComboBox x:Name="bondGroupComboBox" Width="130" SelectedItem="Select bond group" SelectionChanged="bondGroupComboBox_SelectionChanged">
					<System:String>Select bond group</System:String>
				</ComboBox>
			</ToolBar>
		</ToolBarTray>
	</Grid>
</UserControl>