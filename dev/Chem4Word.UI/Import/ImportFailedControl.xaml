<Window x:Class="Chem4Word.UI.Import.ImportFailedControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="500" Title="CMLLite import problem" ResizeMode="CanMinimize" SizeToContent="Height">
	<StackPanel>
		<Label BorderBrush="AntiqueWhite" BorderThickness="1" Height="Auto" Margin="12,6,12,6" VerticalAlignment="Top">
			<TextBlock TextWrapping="Wrap" Name="briefDescription" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
		</Label>
		<Expander Header="More details" Margin="6,6,6,6" HorizontalContentAlignment="Stretch" Name="expander1" IsExpanded="False" MaxHeight="500">
			<ScrollViewer Margin="0,12,0,12" VerticalScrollBarVisibility="Auto">
				<Label BorderBrush="AntiqueWhite" BorderThickness="1" Height="Auto" Margin="6,6,6,6" VerticalAlignment="Top">
					<TextBlock TextWrapping="Wrap" Name="longDescription" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
				</Label>
			</ScrollViewer>
		</Expander>
		<Button HorizontalAlignment="Right" Name="okButton" VerticalAlignment="Bottom" Margin="0,6,12,6" Width="110" IsDefault="True" Click="OkButtonClick" MinHeight="26" MinWidth="110" MaxHeight="26" MaxWidth="110">OK</Button>
	</StackPanel>
</Window>